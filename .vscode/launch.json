{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Root API (Node)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "restart": true
    },
    {
      "name": "Backend API (Node)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/diamondz-playhouse/backend/server.js",
      "cwd": "${workspaceFolder}/diamondz-playhouse/backend",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/diamondz-playhouse/backend/.env",
      "restart": true
    },
    {
      "name": "Frontend (Vite dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev",
        "--",
        "--host",
        "0.0.0.0",
        "--port",
        "5173"
      ],
      "cwd": "${workspaceFolder}/diamondz-playhouse/frontend",
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "Attach to Node (9229)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "Frontend + Backend",
      "configurations": [
        "Frontend (Vite dev)",
        "Backend API (Node)"
      ]
    }
  ]
}
